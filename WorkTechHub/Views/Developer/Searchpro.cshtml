
@{
    ViewBag.Title = "Searchpro";
    Layout = "~/Views/shared/Common_Developer_Layput.cshtml";
}

@using WorkTechHub.Models
@model IEnumerable<ProjectMaster>

<div class="row mt-5">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <form action="/Developer/Searchpro" method="post">

            <div class="row">
                <div class="col-sm-10">
                    <input type="text" name="SearchValue" class="form-control" placeholder="Type here to search.." style="min-height: 50px; border: 1px solid #9C27B0;"/>
                </div>
                <div class="col-sm-2">
                    <input type="submit" value="Search" class="form-control btn btn-primary" style="min-height: 50px;"/>
                </div>
            </div>
            <div class="col-sm-12 mt-5">
                <h1 class="text-center pt-2 pb-1 " style="background-color: #AB47BC; color:#FFF; border-radius:10px 10px 0px 0px ;">Projects</h1>
            </div>
        </form>
    </div>
    <div class="col-sm-1"></div>
</div>
<div class="row mb-5">
    
    <div class="col-sm-1"></div>
    <div class="col-sm-10 table-responsive">
       
       
        <h4 class="text-center text-success">@TempData["Message"]</h4>
        <table class="table table-striped text-center table-bordered" style="border: 1px solid #9C27B0;">
            <tr>
                <th>Project Id</th>
                <th>Title</th>
                <th>Deadline</th>
                <th>Description</th>
                <th> Download File</th>
                <th>Posted on</th>
                <th>Request for project</th>
              
            </tr>
            @{
                foreach (ProjectMaster pm in Model)
                {
                    <tr >
                        <td style="background-color: #F3E5F5;">@pm.ProjectId</td>
                        <td style="background-color: #F3E5F5;">@pm.Title</td>
                        <td style="background-color: #F3E5F5;">@pm.Deadline</td>
                        <td style="background-color: #F3E5F5;">@pm.Descripition</td>
                        <td style="background-color: #F3E5F5;"> <a href="/Developer/DownloadProject?fname=@pm.ProjectFile">
                            <span ><i class="fa-solid fa-file-arrow-down" style="color: #0c5fed;"></i></span></a></td>
                        <td style="background-color: #F3E5F5;">@pm.PostedOn</td>
                        <td style="background-color: #F3E5F5;">
                            <a href="/Developer/RqForProject?id=@pm.ProjectId" style="text-decoration:none;">Request</a>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="col-sm-1"></div>
</div>







