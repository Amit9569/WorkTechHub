
@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/shared/Common_Developer_Layput.cshtml";
}
@using WorkTechHub.Models
@model DeveloperMaster


<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        
            <div class="col-sm-12 mt-5">
                <h1 class="text-center pt-2 pb-1 " style="background-color: #AB47BC; color:#FFF; border-radius:10px 10px 0px 0px ;">MyProfile</h1>
            </div>
        
        <!--Form section start-->
        <!--<h1 class="text-center text-primary  card-header mt-2 mb-2">MyProfile</h1>-->
        <h3 class="text-center">@ViewBag.Message</h3>

        <form action="/Developer/MyProfile" class="form-control mb-5" method="post" enctype="multipart/form-data" style="background-color: #E3C3E9; border-radius:0px 0px 10px 10px;">
            <div class="row">
                <div class="col-sm-7">
                    <div class="mb-3 row">
                        <label for="Email" class="col-sm-2 col-form-label" >Email</label>
                        <div class="col-sm-10">
                            <input type="email" readonly name="Email_Id" class="form-control-plaintext" id="staticEmail" value="@Model.Email_Id">

                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Name" value="@Model.Name">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Mobile No</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" name="Mobile_No" value="@Model.Mobile_No">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="qualification" class="col-sm-2 col-form-label">Qualification</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("Qualification", null, "Qualification", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="gender" class="col-sm-2 col-form-label">Gender</label>
                        <div class="col-sm-10">
                            <span class="form-control">
                                @if (Model.Gender == "Male")
                                {
                                    <input type="radio" value="Male" checked name="Gender" ><span>Male &ensp; &ensp; </span>
                                    <input type="radio" value="Female" name="Gender"> <span>Female</span>
                                }
                                else
                                {
                                    <input type="radio" value="Male"  name="Gender"><span>Male &ensp; &ensp; </span>
                                    <input type="radio" value="Female" checked name="Gender"> <span>Female</span>
                                }

                            </span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="Designation" class="col-sm-2 col-form-label">Designation</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("Designation", null, "Designation", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="address" class="col-sm-2 col-form-label">Address</label>
                        <div class="col-sm-10">
                            <textarea class="form-control inp1" name="Address"  placeholder="Enter your address" rows="4" required >@Model.Address</textarea>
                        </div>
                    </div>
                    <div class="mb-3 row">

                        <div class="col-sm-10">

                            <input type="submit" class="btn btn-primary  ml-5" value="Update Profile" />
                        </div>
                    </div>

                    <!--Profile section part-->
                </div>
                <div class="col-sm-1"></div>
                <div class="col-md-4">
                    <img src="/content/UserPics/@Model.ProfilePic" height="90px;" width="90px;" /><br />
                    <input type="file" name="ProfilePic" />
                </div>
            </div>
        </form>
        <!--Form section end-->
    </div>
    <div class="col-sm-1"></div>
</div>

