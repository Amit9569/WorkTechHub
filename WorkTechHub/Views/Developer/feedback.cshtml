
@{
    ViewBag.Title = "feedback";
    Layout = "~/Views/shared/Common_Developer_Layput.cshtml";
}

<style>
    .txt1 {
        border-radius: 30px;
        height: 55px;
    }

        .txt1:hover {
            border: 3px solid #E0E0E0;
        }

    .txt2 {
        border-radius: 30px;
    }

        .txt2:hover {
            border: 1px solid #E0E0E0;
        }

    .feed {
        background-color: #E3C3E9;
        border-radius: 15px;
        border: 2px solid #8B4E96;
    }

    .btn {
        height: 45px;
        width: 150px;
        border-radius: 30px;
        transition: all 0.5s ease-in-out;
    }

        .btn:hover {
            color: white;
            transform: scale(0.9);
        }
        .err{
            color:red;
        }
</style>
<script>
    $(document).ready(function () {
        $("#btnsubmit").click(function () {
            var title, desc, res = true;
            //Reading values of all control
            title = $("#ttext").val().trim();
            desc = $("#tdesc").val().trim();
          
            //clear old error
            $(".err").remove();
            //Validate title
            if (title.length == 0) {
                $("#ttext").after("<span class='err'>Please enter title.</span>");
                res = false;
            }
            else if (title.length < 4) {
                $("#ttext").after("<span class='err'>Title must be contain minimum 4 character.</span>");
                res = false;
            }
            //Validate Description
            if (desc.length == 0) {
                $("#tdesc").after("<span class='err'>Please write description.</span>");
                res = false;
            }
            else if (desc.length < 10) {
                $("#tdesc").after("<span class='err'>Description must be contain minimum 10 character.</span>");
                res = false;
            }
          
            return res;
        });
    });
</script>

<div class="row mt-5 mb-5">
    <div class="col-sm-1"></div>
    <div class="col-md-6">
        <img src="~/content/images/Feedback (2).png" min-height="500px" width="90%" />
    </div>
    <div class="col-md-4  mt-4 mb-4 feed">
        <h1 class="card-header text-primary  text-center">Feedback</h1>
        <hr />
        <h5 class="text-center pt-1" text-success>Please send your valuable feedback.</h5>
        <p class="text-danger text-center">@ViewBag.Msg</p>
        <form action="/Developer/feedback" method="post" class="form1">
            <div class="mb-3 ">
                <label for="Feedback title" class="form-label">Title </label>
                <input type="text" class="form-control txt1" id="ttext" required placeholder="Topic of feedback" name="Feedback_Title">
            </div>
            <div class="mb-3">
                <label for="Feedback title" class="form-label">Feedback</label>
                <textarea class="form-control txt2 pt-1" rows="4" id="tdesc" required name="Feedback_Detail" placeholder="Type your feedback here......"></textarea>
            </div>
            <input type="submit" id="btnsubmit" class="btn btn-primary  mt-2 mb-2" />
        </form>
    </div>
    <div class="col-sm-1"></div>
</div>




