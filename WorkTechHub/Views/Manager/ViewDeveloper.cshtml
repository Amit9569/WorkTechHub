
@{
    ViewBag.Title = "ViewDeveloper";
    Layout = "~/Views/shared/Common_Manager_Layout.cshtml";
}

@using WorkTechHub.Models
@model IEnumerable<DeveloperMaster>


<div class="row mt-5">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <form action="/Manager/ViewDeveloper" method="post">

            <div class="row">
                <div class="col-sm-10">
                    <input type="text" name="SearchValue" class="form-control" placeholder="Type here to search.." style="min-height: 60px; border: 2px solid #AB47BC " />
                </div>
                <div class="col-sm-2">
                    <input type="submit" value="Search" class="form-control btn btn-primary" style="min-height:60px;"/>
                </div>
            </div>
            <div class="col-sm-12 mt-5">
                <h1 class="text-center pt-2 pb-2 " style="background-color: #AB47BC; color:#FFF; border-radius:10px 10px 0px 0px ; border:1px solid #AB47BC;">Developers</h1>
            </div>
        </form>
    </div>
    <div class="col-sm-1"></div>
</div>
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10 mb-5 table-responsive">
       
        <h4 class="text-center text-success">@TempData["Message"]</h4>
        <table class="table table-striped table-bordered" style="border:1px solid #9C27B0;">
            <tr>
                <th>Name</th>
                <th>Email Id</th>
                <th>Mobile No</th>
                <th>Qualification</th>
                <th> Gender</th>
                <th>Address</th>
                <th>Designation</th>
                <th>Profile pic</th>
                <th>Registered on</th>
                <th>Delete</th>
            </tr>

            @{

                foreach (DeveloperMaster dm in Model)
                {
                    string picname = "";
                    if (dm.ProfilePic == null)
                    {
                        if (dm.Gender.ToUpper().Trim() == "MALE")
                        {
                            picname = "/content/images/defaultboy.png";
                        }
                        else
                        {
                            picname = "/content/images/defaultgirl.png";
                        }
                    }
                    else
                    {
                        picname = "/content/UserPics/" + dm.ProfilePic;
                    }


                    <tr>
                        <td  style="background-color: #F3E5F5;">@dm.Name</td>
                        <td  style="background-color: #F3E5F5;">@dm.Email_Id</td>

                        <td  style="background-color: #F3E5F5;">@dm.Mobile_No</td>
                        <td style="background-color: #F3E5F5;">@dm.Qualification</td>
                        <td style="background-color: #F3E5F5;">@dm.Gender</td>
                        <td style="background-color: #F3E5F5;">@dm.Address</td>
                        <td style="background-color: #F3E5F5;">@dm.Designation</td>
                        <td style="background-color: #F3E5F5;"><img src="@picname" width="80px" height="80px" style="border-radius:50%" /><br /></td>
                        <td style="background-color: #F3E5F5;">@dm.Registered_on</td>
                        <td style="background-color: #F3E5F5;">
                            <a href="/Manager/RemoveUser/?uid=@dm.Email_Id">
                                <i class="  fa-solid fa-trash-can text-danger" style="cursor:pointer; padding-left:20px; padding-top:25px;" title="Remove"></i>
                            </a>
                        </td>
                    </tr>
                }


            }
        </table>
    </div>
    <div class="col-sm-1"></div>
</div>
