
@{
    ViewBag.Title = "ManageFeedback";
    Layout = "~/Views/shared/Common_Manager_Layout.cshtml";
}

@using WorkTechHub.Models
@model IEnumerable<FeedbackMaster>
    <style>
        #head {
            background-color: #F3E5F5;
        }

        #data {
            background-color: #F3E5F5;
        }
    </style>
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10 mt-5">
        <h1 class="text-center pt-2 pb-1 " style="background-color: #AB47BC; color:#FFF; border-radius:10px 10px 0px 0px ;">Feedback Management</h1>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-sm-1"></div>
    <div class="col-sm-10 mb-5 table-responsive ">
 
        <table class="table table-striped table-bordered" style="border: 1px solid #9C27B0;">
            <tr>
                <th id="head">Fid</th>
                <th id="head">Feedback By</th>
                <th id="head">Feedback_Title</th>
                <th id="head">Feedback_Detail</th>
                <th id="head"> Developerid</th>
                <th id="head">MsgDT</th>
            </tr>
            @{

                foreach (FeedbackMaster fm in Model)
                {
                    string picname = "";
                    if (fm.DeveloperMaster.ProfilePic == null)
                    {
                        if (fm.DeveloperMaster.Gender.ToUpper().Trim() == "MALE")
                        {
                            picname = "/content/images/defaultboy.png";
                        }
                        else
                        {
                            picname = "/content/images/defaultgirl.png";
                        }
                    }

                    picname = "/content/UserPics/" + fm.DeveloperMaster.ProfilePic;
                    <tr>
                        <td id="head">@fm.Fid</td>
                        <td id="head">
                            <img src="@picname" width="80px" height="80px" style="border-radius:50%" /><br />
                            @fm.DeveloperMaster.Name
                        </td>

                        <td id="head">@fm.Feedback_Title</td>
                        <td id="head">@fm.MsgDT</td>
                        <td id="head">@fm.Feedback_detail</td>
                        <td id="head">@fm.Developerid</td>
                    </tr>
                }


            }
        </table>
    </div>
    <div class="col-sm-1"></div>
</div>

