
@{
    ViewBag.Title = "WorkProject";
    Layout = "~/Views/shared/Common_Manager_Layout.cshtml";
}

@using WorkTechHub.Models
@model IEnumerable<RequestMaster>
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10 mt-5">
        <h1 class="text-center pt-2 pb-1 " style="background-color: #AB47BC; color:#FFF; border-radius:10px 10px 0px 0px ;">Work Request</h1>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-sm-1"></div>
    <div class="col-sm-10 table-responsive">
       
        <table class="table table-striped  table-bordered" style="border:1px solid #9C27B0; ">
            <tr >
                <th style="background-color: #F3E5F5; text-align:center">RequestId</th>
                <th style="background-color: #F3E5F5; text-align: center">Request for</th>
                <th style="background-color: #F3E5F5; text-align: center">Message</th>
                <th style="background-color: #F3E5F5; text-align: center">Requested By</th>

                <th style="background-color: #F3E5F5; text-align: center">Request Date</th>

            </tr>
            @{
                foreach (RequestMaster rm in Model)
                {

                    <tr>
                        <td style="background-color: #F3E5F5;">@rm.RequestId</td>

                        <td class="text-center"style="background-color: #F3E5F5;">@rm.RequestedFor</td>
                        <td style="background-color: #F3E5F5">@rm.RequestMsg</td>
                        <td style="background-color: #F3E5F5;">@rm.DeveloperMaster.Email_Id</td>
                        <td style="background-color: #F3E5F5;">@rm.RequestDt</td>

                    </tr>
                }
            }
        </table>
    </div>
    <div class="col-sm-1"></div>
</div>





