
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/content/javascript/jquery-3.7.1.min.js"></script>
    <script src="~/content/Bootstrap/js/bootstrap.min.js"></script>
    <link href="~/content/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />

    <title>Welcome to DeveloperZone</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/content/Css/developerSheet2.css" rel="stylesheet" />

</head>
<body>
    <div class="container-fluid ">


        <div class="row header position-relative" style="background-color: #7B1FA2; ">
            <div class="col-sm-2 logo p-0 m-0 text-center">
                <img src="~/Content/Images/glow-removebg-preview.png" style="height:150px; width:70%; " />
            </div>
            <div class="col-sm-7">
                <h1 class="card-header text-center mt-5 text-light ">Welcome To Developer Zone</h1>
            </div>
            <div class="col-sm-1 mt-4" style="color:#FFF;">Hii, @ViewBag.Name</div>
            <div class="col-sm-2 p-0 m-0">
                <img src="@ViewBag.Pictures" style="min-height:150px;width:80%; border-radius:50%;" />
            </div>
        </div>
        <div class="row menu ">

            <div class="col-sm-12 " style="background-color:#0B0A33; margin-right:0px; ">
                <nav class="navbar navbar-expand-lg">
                    <div class="container-fluid ">

                        <button class="navbar-toggler text-bg-light" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse " id="navbarSupportedContent">

                            <ul class="navbar-nav ">
                                <li class="nav-item" id="nav1">

                                    @Html.ActionLink("Dashboard", "Welcome", "Developer", new { @class = "nav-link " })
                                </li>
                                <li class="nav-item">

                                    @Html.ActionLink("Search Projects", "SearchPro", "Developer", new { @class = "nav-link " })
                                </li>

                                <li class="nav-item">

                                    @Html.ActionLink("My Projects", "MyProjects", "Developer", new { @class = "nav-link " })
                                </li>
                                <li class="nav-item">

                                    @Html.ActionLink("Todays Task", "TodayTask", "Developer", new { @class = "nav-link " })

                                <li class="nav-item">

                                    @Html.ActionLink("Upload Code", "UploadCode", "Developer", new { @class = "nav-link " })
                                </li>
                                <li class="nav-item">

                                    @Html.ActionLink("Work Report", "WorkReport", "Developer", new { @class = "nav-link " })
                                </li>
                                <li class="nav-item">

                                    @Html.ActionLink("Feedback", "feedback", "Developer", new { @class = "nav-link " })
                                </li>
                                <!--Dropdown start-->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown">Setting</a>
                                    <ul class="dropdown-menu">
                                        <li> @Html.ActionLink("My Profile", "MyProfile", "Developer", new { @class = "dropdown-item", style = "color:black;" })</li>
                                        <li> @Html.ActionLink("Change Password", "ChangePass", "Developer", new { @class = "dropdown-item", style = "color:black;" })</li>
                                        <li> @Html.ActionLink("Logout", "Logout", "Developer", new { @class = "dropdown-item", style = "color:black;" })</li>
                                    </ul>
                                </li>
                                <!--Dropdown end-->
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>

        </div>
        <div class="row main ">
            <div class="col-sm-12 menu " style=" min-height:500px;">
                @RenderBody()
            </div>
        </div>
        <!--Footer Part start-->
        <div class="row bg-dark text-center pt-3 " style="color:aliceblue; min-height:50px; ">
            <div class="col-sm-6">Copyright © WorkTechHub 2023. All Rights Reserved.</div>
            <div class="col-sm-6">Design & Developed by Er. Amit Kumar Yadav</div>
        </div>
        <!--Footer Part end-->
    </div>
</body>
</html>

